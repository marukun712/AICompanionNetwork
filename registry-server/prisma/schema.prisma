generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://user:postgres@localhost:5432/registry"
}

generator zod {
  provider          = "zod-prisma-types"
  useMultipleFiles  = true
  writeBarrelFiles  = false
  useTypeAssertions = true
}

model Room {
  id         String      @id @default(uuid())
  name       String
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  furniture  Furniture[]
  companions Companion[]
}

model Companion {
  id          String   @id @default(uuid())
  name        String
  personality String
  story       String
  sample      String
  icon        String
  roomId      String
  room        Room     @relation(fields: [roomId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Furniture {
  id        String   @id @default(uuid())
  label     String
  x         Int
  y         Int
  z         Int
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
