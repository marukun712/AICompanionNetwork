{
  "title": "AI Companion Protocol Definition",
  "description": "AIコンパニオンの行動、知覚、判断基準を定義するスキーマ",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "AIコンパニオンの名前"
    },
    "personality": {
      "type": "string",
      "description": "コンパニオンの性格"
    },
    "story": {
      "type": "string",
      "description": "コンパニオンの背景ストーリー"
    },
    "version": {
      "type": "string",
      "description": "スキーマのバージョン"
    },
    "metadata": {
      "type": "object",
      "description": "追加のメタデータ",
      "properties": {
        "author": { "type": "string" },
        "thumbnail": { "type": "string" },
        "created": { "type": "string", "format": "date-time" },
        "updated": { "type": "string", "format": "date-time" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "actions": {
      "type": "array",
      "description": "エージェントが実行できる行動の定義",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "アクション名"
          },
          "description": {
            "type": "string",
            "description": "アクションの説明"
          },
          "type": {
            "type": "string",
            "enum": ["object"],
            "description": "パラメータの型"
          },
          "properties": {
            "type": "object",
            "description": "アクションのパラメータ（JSON Schema形式）",
            "additionalProperties": true
          },
          "required": {
            "type": "array",
            "description": "必須のパラメータリスト",
            "items": { "type": "string" }
          }
        },
        "required": ["title", "description", "type", "properties", "required"]
      }
    },
    "perceptions": {
      "type": "array",
      "description": "エージェントが知覚できる情報の定義",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "知覚情報の名前（例: vision, audio)"
          },
          "description": {
            "type": "string",
            "description": "知覚情報の説明"
          },
          "type": {
            "type": "string",
            "enum": ["object"],
            "description": "知覚情報の型"
          },
          "properties": {
            "type": "object",
            "description": "知覚情報の構造（JSON Schema形式）",
            "properties": {
              "title": {
                "type": "string",
                "description": "知覚情報の名前（例: vision, audio)"
              },
              "format": {
                "type": "string",
                "enum": ["object", "text", "image"],
                "description": "知覚情報の種類。構造化されたobject、画像、テキスト"
              },
              "body": {
                "type": "string",
                "description": "データ本体"
              }
            },
            "required": ["title"]
          },
          "required": {
            "type": "array",
            "description": "必須のフィールドリスト",
            "items": { "type": "string" }
          }
        },
        "required": ["title", "description", "type", "properties", "required"]
      }
    },
    "events": {
      "type": "array",
      "description": "知覚に基づいて行動を起こすためのイベント定義",
      "items": {
        "type": "object",
        "properties": {
          "perception": {
            "type": "string",
            "description": "トリガーとなる知覚情報の名前"
          },
          "action": {
            "type": "array",
            "description": "実行するアクションの名前",
            "items": { "type": "string" }
          },
          "condition": {
            "type": "string",
            "description": "自然言語で記述された判断基準"
          }
        },
        "required": ["perception", "action", "condition"]
      }
    }
  },
  "required": ["name", "actions", "perceptions", "events"]
}
